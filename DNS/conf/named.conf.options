options {
    directory "/var/cache/bind";

    listen-on port 53 {
        any;
    };

    recursion no;

    allow-transfer {
        51.210.42.26;
    };

    allow-update {
        none;
    };

    additional-from-cache no;
    additional-from-auth no;

    dnssec-enable yes;
    dnssec-validation yes;
    dnssec-lookaside auto;
};
